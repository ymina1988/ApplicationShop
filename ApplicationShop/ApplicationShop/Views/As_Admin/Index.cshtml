<head>
    <title>ورود به مدیریت</title>
    <!-- Meta -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" href="favicon.ico">
    <!-- Web Fonts -->
    <link rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Open+Sans:400,300,600&amp;subset=cyrillic,latin'>
    <!-- CSS Global Compulsory -->
    <link rel="stylesheet" href="~/Content/unify/assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/unify/assets/css/style.css">
    <!-- CSS Implementing Plugins -->
    <link rel="stylesheet" href="~/Content/unify/assets/plugins/animate.css">
    <link rel="stylesheet" href="~/Content/unify/assets/plugins/line-icons/line-icons.css">
    <link rel="stylesheet" href="~/Content/unify/assets/plugins/font-awesome/css/font-awesome.min.css">
    <!-- CSS Page Style -->
    <link rel="stylesheet" href="~/Content/unify/assets/css/pages/page_log_reg_v2.css">
    <link rel="stylesheet" href="~/assets/css/toaster/v2.1.3/toastr.css">
    <!-- CSS Theme -->
    <link rel="stylesheet" href="~/Content/unify/assets/css/theme-colors/default.css" id="style_color">
    <link rel="stylesheet" href="~/Content/unify/assets/css/theme-skins/dark.css">
    <!-- CSS Customization -->
    <link rel="stylesheet" href="~/Content/unify/assets/css/custom.css">
</head>
<body>
    <!--=== Content Part ===-->
    <div class="container">
        <!--Reg Block-->
        <div class="reg-block">
            <div class="reg-block-header">
                <h2>ورود به بخش مدیریت</h2>
                <ul class="social-icons text-center">
                    <li><a class="rounded-x social_facebook" data-original-title="Facebook" href="#"></a></li>
                    <li><a class="rounded-x social_twitter" data-original-title="Twitter" href="#"></a></li>
                    <li><a class="rounded-x social_googleplus" data-original-title="Google Plus" href="#"></a></li>
                    <li><a class="rounded-x social_linkedin" data-original-title="Linkedin" href="#"></a></li>
                </ul>
            </div>
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                <input type="text" id="U" class="form-control" placeholder="Email">
            </div>
            <div class="input-group margin-bottom-20">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <input type="password" id="P" class="form-control" placeholder="Password">
            </div>
            <div class="row">
                <div class="col-md-10 col-md-offset-1">
                    <button type="button" onclick="Login()" class="btn-u btn-block">ورود به سایت</button>
                </div>
            </div>
        </div>
        <!--End Reg Block-->
    </div><!--/container-->
    <!--=== End Content Part ===-->
    <!-- JS Global Compulsory -->
    <script type="text/javascript" src="~/Content/unify/assets/plugins/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/Content/unify/assets/plugins/jquery/jquery-migrate.min.js"></script>
    <script type="text/javascript" src="~/Content/unify/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- JS Implementing Plugins -->
    <script type="text/javascript" src="~/Content/unify/assets/plugins/back-to-top.js"></script>
    <script type="text/javascript" src="~/Content/unify/assets/plugins/backstretch/jquery.backstretch.min.js"></script>

    <script src="~/assets/js/toastr/v2.1.3/toastr.js"></script>
    <script src="~/Scripts/AlertLoading/PAlert.js"></script>
    <script src="~/Scripts/spin.min.js"></script>
    <script src="~/Scripts/AlertLoading/PLoading.js"></script>
    <script src="~/bundles/js/jqueryval"></script>

    <!-- JS Customization -->
    <script type="text/javascript" src="~/Content/unify/assets/js/custom.js"></script>
    <!-- JS Page Level -->
    <script type="text/javascript" src="~/Content/unify/assets/js/app.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function () {
            App.init();
        });
        function Login() {
            $.ajax({
                url: '/As_Admin/Login',
                type: 'Post',
                data: { User: $('#U').val(), Password: $('#P').val() },
                async: false,
                success: function (myRes) {
                    if (parseInt(myRes.Status) > 0) {
                        window.setTimeout(function () {
                            window.location.href = "/Admin";
                        }, 1000);
                    }
                    
                }
            });
        }
        function Refresh() {
            var d = new Date();
            $("#imgcpatcha").attr("src", "/Register/CaptchaImage?" + d.getTime());
        }
    </script>
    <script type="text/javascript">
        $.backstretch([
            "/Content/unify/assets/img/bg/19.jpg",
            "/Content/unify/assets/img/bg/18.jpg",
        ], {
                fade: 1000,
                duration: 7000
            });
    </script>
    <!--[if lt IE 9]>
    <script src="~/Content/unify/assets/plugins/respond.js"></script>
    <script src="~/Content/unify/assets/plugins/html5shiv.js"></script>
    <script src="~/Content/unify/assets/plugins/placeholder-IE-fixes.js"></script>
    <![endif]-->
</body>
</html>

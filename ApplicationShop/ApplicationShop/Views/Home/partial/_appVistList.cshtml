@model List<ApplicationShop.Models.ViewModel.Main.AppViewModel>


<div class="bg-grey">
    <div class="container content-md">
        <h2 class="title-v2 title-center">پر بازدیدترین اپ ها</h2>
        
            <ul class="row list-row margin-bottom-30">
                @foreach (var item in Model)
                {
                    <li class="col-md-3 md-margin-bottom-30">
                        <div class="content-boxes-v3 block-grid-v1 rounded">
                            <div class="content-boxes-in-v3">
                                <div class="text-center">
                                    <img class="img-responsive img-thumbnail" width="200" height="200" src="~/Content/Upload/img/@item.ImgUrl" alt="">
                                </div>
                                <h3><a href="/App?id=@item.Id">@item.AppName</a></h3>
                               
                            </div>
                        </div>
                    </li>
                }
            </ul>
        
    </div>
</div>









